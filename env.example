# Arbitrage Bot Configuration Example
# Copy this file to config.env and fill in your actual values

# Exchange API Keys
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here

LBANK_API_KEY=your_lbank_api_key_here
LBANK_SECRET_KEY=your_lbank_secret_key_here

# System Settings
NODE_ENV=production
PORT=8080

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging Settings
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Database Settings (if needed)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=arbitrage_bot

# Webhook Settings (for notifications)
WEBHOOK_URL=your_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Additional Security Settings
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_here

# Proxy Settings (if needed)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# GitHub Authentication Token (Required)
GITHUB_TOKEN=your_github_token_here
