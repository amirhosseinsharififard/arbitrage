# DEX Trading Configuration
# Copy this file to .env and fill in your actual values

# 1inch API Key (Get from https://portal.1inch.dev/)
ONEINCH_API_KEY=your_1inch_api_key_here

# Wallet Configuration
WALLET_ADDRESS=0x0000000000000000000000000000000000000000
WALLET_PRIVATE_KEY=your_private_key_here

# Optional: Alternative DEX APIs
# 0x API Key (Alternative to 1inch)
ZEROX_API_KEY=your_0x_api_key_here

# ParaSwap API (No key required)
PARASWAP_ENABLED=true

# Jupiter API (For Solana - No key required)
JUPITER_ENABLED=false

# Trading Configuration
MIN_PROFIT_PERCENT=3.1
SLIPPAGE_TOLERANCE=1
MAX_TRADE_AMOUNT_USD=1000

# Gas Configuration (Base chain)
GAS_LIMIT=300000
GAS_PRICE_GWEI=0.1

# Network Configuration
NETWORK=base
RPC_URL=https://mainnet.base.org
